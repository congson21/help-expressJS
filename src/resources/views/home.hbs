{{!-- <h1>{{result[0]}}</h1> --}}
<div class="mt-4">
    <div class="row">
        {{#each result}}
        <div class="col-ms-6 col-lg-4">
            <div class="card">
                <a href="/course/{{this.slug}}">
                    <img src="{{this.img}}" class="card-img-top" alt="{{this.course_name}}">
                </a>
                <div class="card-body">
                    <a href="/course/{{this.slug}}">
                        <h5 class="card-title">{{this.course_name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="#" class="btn btn-primary">Go somewhere</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>