<div class="mt-4">
    <h3>Sửa khóa học</h3>
  {{#course}}
    <form method="POST" action="/course/{{this.course_id}}/updateCourse">    
        <div class="form-group">
            <label for="course_name">Tên khóa học</label>
            <input type="text" class="form-control" value="{{this.course_name}}" id="course_name" name="course_name">
        </div>

        <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" value="{{this.description}}" id="description" name="description">
        </div>
        {{/course}}
        <button type="submit" class="btn btn-primary">Lưu</button>      
    </form>

</div>